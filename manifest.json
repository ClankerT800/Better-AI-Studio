{
  "manifest_version": 3,
  "name": "Better AIstudio",
  "version": "1.1.2",
  "description": "Automatically apply your favorite AIstudio settings, and avoid manual setup for each chat.",
  "permissions": [
    "storage",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "https://aistudio.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "icons": {
    "128": "logo.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}