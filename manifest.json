{
  "manifest_version": 3,
  "name": "Better AIstudio",
  "version": "1.2.0",
  "description": "Automatically apply your favorite AIstudio settings, and avoid manual setup for each chat. (Completely Free!)",
  "permissions": ["storage", "scripting", "webNavigation", "tabs"],
  "host_permissions": ["https://aistudio.google.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "icons": {
    "128": "logo.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "themes/theme-config.json",
        "config/ui-config.json",
        "shared/app-config.js",
        "shared/defaults.js",
        "shared/storage.js",
        "shared/theme-loader.js"
      ],
      "matches": ["https://aistudio.google.com/*"]
    }
  ]
}
